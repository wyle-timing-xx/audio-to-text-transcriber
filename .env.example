# Deepgram API Key
# Get your API key from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# BlackHole Audio Device
# Default is "BlackHole 2ch:1" for macOS
AUDIO_DEVICE=BlackHole 2ch:1

# Transcription Options
LANGUAGE=zh
MODEL=nova-2
SMART_FORMAT=true
PUNCTUATE=true

# Output Options
OUTPUT_FILE=transcripts/output.txt
QA_OUTPUT_FILE=transcripts/qa_output.txt
SAVE_TO_FILE=true
LOG_TO_CONSOLE=true

# AI 配置
AI_PROVIDER=openai           # openai | claude | deepseek
OPENAI_API_KEY=your_openai_key
CLAUDE_API_KEY=your_claude_key
DEEPSEEK_API_KEY=your_deepseek_key
DEEPSEEK_ENDPOINT=https://api.deepseek.ai/v1/chat/completions

# AI 模型配置
OPENAI_MODEL=gpt-4o-mini
CLAUDE_MODEL=claude-3-opus-20240229
DEEPSEEK_MODEL=deepseek-chat

# AI 行为配置
AI_SYSTEM_PROMPT="你是智能问答助理，请简洁、准确地回答用户问题。"
SILENCE_TIMEOUT_MS=1500
PARTIAL_SEND=true